{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build (Linux)",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "$(find",
                "${workspaceFolder}/src",
                "-type",
                "f",
                "-iregex",
                "'.*\\.cpp')"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build"
            },
            "detail": "Builds all *.cpp files in the source directory."
        },
        {
            "type": "shell",
            "label": "C/C++: g++ build (Windows)",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "$((Get-ChildItem",
                "-Path",
                "'${workspaceFolder}/src'",
                "-Filter",
                "'*.cpp'",
                "-Recurse).FullName)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build"
            },
            "detail": "Builds all *.cpp files in the source directory."
        },
    ],
    "version": "2.0.0"
}
